@page
@model AsistentesModel
@{
    ViewData["Title"] = "Asistentes";
}

<h2>Asistentes Registrados</h2>
<table class="table">
    <thead>
        <tr>
            <th>Nombres</th>
            <th>Apellidos</th>
            <th>Número de Expediente</th>
            <th>Evento ID</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var asistente in Model.Asistentes)
        {
            <tr>
                <td>@asistente.Nombres</td>
                <td>@asistente.Apellidos</td>
                <td>@asistente.NumeroExpediente</td>
                <td>@asistente.EventoId</td>
            </tr>
        }
    </tbody>
</table>

<!-- Botón para exportar asistentes como XML -->
<form method="post">
    <button type="submit" name="handler" value="Exportar" class="btn btn-primary">Exportar XML</button>
</form>